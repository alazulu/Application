<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewsohbet"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_sohbet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/sohbet_ad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="start"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btn_sohbet"
        app:layout_constraintStart_toEndOf="@+id/cardViewsohbet"
        app:layout_constraintTop_toTopOf="@+id/btn_sohbet" />

    <Button
        android:id="@+id/btn_sohbet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:clickable="false"
        android:text="@string/msjat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sohbet_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_sohbet"
        app:layout_constraintTop_toBottomOf="@+id/btn_sohbet" />

    <TextView
        android:id="@+id/sohbet_last"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/grey3"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_sohbet"
        app:layout_constraintStart_toEndOf="@+id/cardViewsohbet"
        app:layout_constraintTop_toBottomOf="@+id/sohbet_ad" />

    <ImageView
        android:id="@+id/ivreddot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/sohbet_ad"
        app:layout_constraintTop_toTopOf="@+id/sohbet_ad"
        app:srcCompat="@drawable/reddot_8" />

</androidx.constraintlayout.widget.ConstraintLayout>